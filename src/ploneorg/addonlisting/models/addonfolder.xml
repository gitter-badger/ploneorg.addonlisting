<?xml version="1.0" ?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns:security="http://namespaces.plone.org/supermodel/security"
       xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
       xmlns:users="http://namespaces.plone.org/supermodel/users"
       xmlns:lingua="http://namespaces.plone.org/supermodel/lingua"
       xmlns:i18n="http://namespaces.zope.org/i18n"
       i18n_domain="ploneorg.addonlisting">

    <schema>

      <!-- field definitions -->
      <field name="plone_version_mapping"
             type="zope.schema.List"
             form:widget="collective.z3cform.datagridfield.datagridfield.DataGridFieldFactory"
             security:write_permission="cmf.ManagePortal"
             security:read_permission="zope2.View" >
        <title i18n:translate="">Plone Version Mapping</title>
        <description i18n:translate="">Map PyPI Classifier to a supported Plone Version to show on Add'on</description>
        <required>False</required>
        <value_type type="collective.z3cform.datagridfield.DictRow">
          <title>Mapping</title>
          <schema>ploneorg.addonlisting.contents.IMapping</schema>
        </value_type>
      </field>

      <field name="python_version_mapping"
             type="zope.schema.List"
             form:widget="collective.z3cform.datagridfield.datagridfield.DataGridFieldFactory"
             security:write_permission="cmf.ManagePortal"
             security:read_permission="zope2.View" >
        <title i18n:translate="">Python Version Mapping</title>
        <description i18n:translate="">Map PyPI Classifier to a supported Python Version to show on Add'on</description>
        <required>False</required>
        <value_type type="collective.z3cform.datagridfield.DictRow">
          <title>Mapping</title>
          <schema>ploneorg.addonlisting.contents.IMapping</schema>
        </value_type>
      </field>


      <field name="add_categories"
             type="zope.schema.List"
             security:write_permission="cmf.ManagePortal"
             security:read_permission="zope2.View" >
        <title i18n:translate="">Add'on Categories</title>
        <description i18n:translate="">Base for Add'on Category Vocabulary</description>
        <required>False</required>
        <value_type type="zope.schema.TextLine">
        </value_type>
      </field>

    </schema>

</model>
